#include <bits/stdc++.h>
using namespace std;
int main() 
{
   int m1=5,m2=7;
   double d1=4.734, d2=8.769;
   
    cout<<"Display arithmetic operations with mixed datatype:"<<endl;
   cout<<fixed<<setprecision(1);  
 
   cout<<m1<<"+"<<m2<<"="<< m1+m2 << endl;  
   cout<<d1<<"+"<<d2<<"="<<d1+d2<<endl;  
   cout<<m1<<"+"<<d2<<"="<<m1+d2<<endl;  
 
   cout<<m1<<"-"<<m2<<"="<<m1-m2<<endl;  
   cout<<d1<<"-"<<d2<<"="<<d1-d2<< endl;  
   cout<<m1<<"-"<<d2<<"="<<m1-d2<< endl;  
 
   cout<<m1<<"*"<<m2<<"="<<m1*m2<<endl; 
   cout<<d1<<"*"<<d2<<"="<<d1*d2<<endl;  
   cout<<m1<<"*"<<d2<<"="<<m1*d2<<endl;  
 
   cout<<m1<<"/"<<m2<<"="<<m1/m2<<endl;  
   cout<<d1<<"/"<<d2<<"="<<d1/d2<<endl;  
   cout<<m1<<"/"<<d2<<"="<<m1/d2<< endl;  
   cout<<endl;
   return 0;
}
